<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_margin="15dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imgSekil"
            android:src="@mipmap/spinner"
            android:contentDescription="@string/modeladi"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/modeladi"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:id="@+id/txtModeli"
            android:background="#000000"
            android:alpha="0.8"
            android:layout_alignBottom="@+id/imgSekil"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/txtModeli">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qiymeti"
                    android:textColor="#eeeeee"
                    android:textSize="15sp"
                    android:id="@+id/txtQiymeti"
                    android:layout_weight="1"
                    android:background="#ff1744"
                    style="?android:attr/buttonBarButtonStyle"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_buy"
                    android:textColor="#eeeeee"
                    android:textSize="15sp"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:background="#0f9d58"
                    style="?android:attr/buttonBarButtonStyle"
                    />
            </LinearLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>
